<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Subtle" parent="AppTheme">
        <item name="colorPrimary">@color/subtle_colorPrimary</item>
        <item name="colorPrimaryDark">@color/subtle_colorPrimaryDark</item>
        <item name="colorAccent">@color/subtle_colorAccent</item>
        <item name="android:textColor">@color/subtle_textColor</item>
        <item name="android:actionBarStyle">@style/Subtle.ActionBar</item>
        <item name="android:colorActivatedHighlight">@color/subtle_colorActivatedHighlight</item>
        <item name="android:textAppearanceListItem">@android:color/black</item>
    </style>

    <style name="Subtle.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/subtle_colorPrimaryDark</item>
        <item name="android:titleTextAppearance">@style/Subtle.ActionBar.Text</item>
    </style>

    <style name="Subtle.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="thickness">2dp</item>
        <item name="gapBetweenBars">4dp</item>
        <item name="drawableSize">26dp</item>
        <item name="spinBars">true</item>
        <item name="arrowHeadLength">4dp</item>
        <item name="arrowShaftLength">4dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>
