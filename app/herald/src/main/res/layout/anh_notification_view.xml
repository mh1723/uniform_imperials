<?xml version="1.0" encoding="utf-8"?>
<com.github.mmin18.widget.FlexLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nh_card_container"
        app:layout_top="prev.bottom + 4dp"
        app:layout_centerX="50%"
        app:layout_width="100%-10dp"
        app:layout_height="80dp"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingStart="10dp"
            android:id="@+id/nh_item_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nh_item_title"
            android:textColor="@android:color/black"
            android:layout_gravity="top"
            android:paddingTop="0dp"
            app:layout_top="2dp"
            app:layout_left="prev.right + 2dp"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nh_item_content"
            android:layout_gravity="start"
            android:textColor="@android:color/black"
            android:paddingTop="30dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nh_item_date"
            android:layout_gravity="right"
            android:textColor="@android:color/black"
            android:paddingTop="30dp"
            android:textSize="15dp" />

    </android.support.v7.widget.CardView>

</com.github.mmin18.widget.FlexLayout>